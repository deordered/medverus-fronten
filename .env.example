# Medverus AI Frontend Environment Variables
# Copy this file to .env.local and configure your values

# Application Configuration
NEXT_PUBLIC_APP_NAME="Medverus AI"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://medverus.com"

# API Configuration
NEXT_PUBLIC_API_URL="https://medverus-backend.fly.dev"
API_TIMEOUT=30000

# Authentication Configuration
JWT_SECRET_KEY="your-super-secure-jwt-secret-key-here"
JWT_AUDIENCE="medverus-frontend"
JWT_ISSUER="medverus-api"
JWT_EXPIRES_IN="30m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Security Configuration
ALLOWED_ORIGINS="https://medverus.com,https://app.medverus.com"
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
ENCRYPTION_KEY="your-32-character-encryption-key"

# Database Configuration (if using local caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,jpg,jpeg,png"
UPLOAD_DIR="./uploads"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1
ANALYTICS_API_KEY=""

# Medical Data Protection
HIPAA_COMPLIANCE_MODE=true
PHI_DETECTION_ENABLED=true
AUDIT_LOG_LEVEL="info"
DATA_RETENTION_DAYS=2555

# External Services
GOOGLE_ANALYTICS_ID=""
SENTRY_DSN=""
LOG_LEVEL="info"

# Development Configuration
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED=1

# Production Configuration
# Set these in production environment
# VERCEL_GIT_COMMIT_SHA=""
# DEPLOYMENT_URL=""
# DATABASE_URL=""